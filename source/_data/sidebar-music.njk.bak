// 全局变量
let ap = null;
let isPlaying = false;
let currentVolume = 0.7;
let playMode = 'list'; // 只有 'list' 和 'random' 两种模式
let panelTimeout = null;
let isPanelVisible = false;
let isSeeking = false;
let isDraggingProgress = false;
let lastRandomIndex = -1;
let currentTrackIndex = 0;

// 自动计算当前页面的基础路径
function getBasePath() {
  const currentPath = window.location.pathname;
  const currentUrl = window.location.href;
  
  // 如果当前页面是 _posts 目录下的文章页面
  if (currentPath.includes('/_posts/') || currentPath.includes('/categories/') || 
      currentPath.includes('/tags/') || currentPath.includes('/about/')) {
    // 这些页面在 source 目录下，需要返回上级目录
    return '../';
  }
  
  // 如果是文章详情页（Hexo格式：/年/月/日/文章名/）
  const pathParts = currentPath.split('/').filter(p => p);
  if (pathParts.length >= 4 && /^\d{4}$/.test(pathParts[0]) && /^\d{2}$/.test(pathParts[1])) {
    // 计算需要返回多少级目录才能到根目录
    const levelsUp = pathParts.length;
    return '../'.repeat(levelsUp);
  }
  
  // 主页或其他页面，使用相对路径
  return './';
}

