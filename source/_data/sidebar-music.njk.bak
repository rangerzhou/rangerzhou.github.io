      </div>

      <!-- 控制栏 -->
      <div class="controls-section">
        <!-- 当前播放信息 -->
        <div class="current-track">
          <div class="track-name" id="current-track-name">Undying Macula</div>
          <div class="track-artist" id="current-track-artist">Ashrount</div>
        </div>

        <!-- 进度条 -->
        <div class="progress-container">
          <div class="progress-bar" id="progress-bar">
            <div class="progress" id="progress"></div>
          </div>
          <div class="time-info">
            <span id="current-time">00:00</span>
            <span id="total-time">02:43</span>
          </div>
        </div>

        <!-- 控制按钮 -->
        <div class="controls-group">
          <button class="control-btn" id="mode-btn" title="播放模式">
            <i class="fa fa-random" id="mode-icon"></i>
          </button>
          <button class="control-btn" id="prev-btn" title="上一首">
            <i class="fa fa-step-backward"></i>
          </button>
          <button class="control-btn main" id="main-play-btn" title="播放/暂停">
            <i class="fa fa-play" id="main-play-icon"></i>
          </button>
          <button class="control-btn" id="next-btn" title="下一首">
            <i class="fa fa-step-forward"></i>
          </button>
          <div class="play-mode-indicator" id="play-mode-indicator"></div>
        </div>
      </div>
